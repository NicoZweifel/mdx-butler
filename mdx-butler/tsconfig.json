{
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "jsx": "preserve",
  },
  "include": ["index.ts", "client.ts", "preactEntry.ts"],
  "exclude": ["node_modules", "build"],
}
