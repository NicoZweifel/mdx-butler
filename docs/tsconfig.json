{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["ES2021", "ESNext"],
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"],
      "mdx-tug": ["./node_modules/mdx-tug/build/*"],
      "mdx-tug/client": ["./node_modules/mdx-tug/build/client"],
    },
  },
  "include": ["node_modules/vite/client.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/*", "dist"],
}
